<!DOCTYPE html>
<html>
   <head>
      <title>js-auth</title>
      <link rel="stylesheet" href="css/bootstrap.css">
      <link rel="stylesheet" href="css/app.css">
      <script type="text/javascript" src="lib/firebase.js"></script>
      <script type="text/javascript" src="lib/firebase-simple-login.js"></script>
      <script type="text/javascript" src="lib/jquery.min.js"></script>
      <script type="text/javascript" src="lib/bootstrap.min.js"></script>
      <script src="js/app.js"></script>
   </head>
   <body>
      <div class="container">
         <div class="header">
            <div class="btn-group pull-right">
               <button onclick="minimize()" type="button" class="btn btn-default btn-xs">
               <span class="glyphicon glyphicon-minus"></span>
               </button>
               <button onclick="toggleFullscreen()" type="button" class="btn btn-default btn-xs">
               <span class="glyphicon glyphicon-fullscreen"></span>
               </button>
               <button onclick="closeWindow()" type="button" class="btn btn-default btn-xs">
               <span class="glyphicon glyphicon-remove"></span>
               </button>
            </div>
            <h1>js-auth</h1>
            <hr/>
         </div>
         <!-- login panel -->
         <!-- http://bootsnipp.com/snippets/featured/login-amp-password-reminder -->
         <div class="container">
            <div class="row">
               <div class="col-md-6 col-md-offset-3">
                  <div style="padding: 20px;" class="form-auth">
                     <h4 style="border-bottom: 1px solid #c5c5c5;">
                        <i class="glyphicon glyphicon-user">
                        </i>
                        Sign In
                     </h4>
                     <form role="form">
                        <fieldset>
                           <div class="form-group input-group">
                              <span class="input-group-addon">
                              @
                              </span>
                              <input class="form-control" placeholder="Email" name="email" type="email" id="signin_email" autofocus>
                           </div>
                           <div class="form-group input-group">
                              <span class="input-group-addon">
                              <i class="glyphicon glyphicon-certificate">
                              </i>
                              </span>
                              <input class="form-control" placeholder="Password" name="password" type="password" id="signin_pwd">
                           </div>
                           <div class="form-group">
                              <button type="button" class="btn btn-primary btn-block" onclick="signin()">
                              Sign In
                              </button>
                              <p class="help-block">
                                 <a class="pull-right text-muted" href="#" id="signup">Sign Up</a>
                              </p>
                           </div>
                        </fieldset>
                     </form>
                  </div>
                  <div style="display: none;" class="form-auth">
                     <form role="form">
                        <h4 style="border-bottom: 1px solid #c5c5c5;">
                           <i class="glyphicon glyphicon-user">
                           </i>
                           Sign Up
                        </h4>
                        <fieldset>
                           <div class="form-group input-group">
                              <span class="input-group-addon">
                              @
                              </span>
                              <input id="signup_email" class="form-control" placeholder="Email" name="email" type="email" autofocus>
                           </div>
                           <div class="form-group input-group">
                              <span class="input-group-addon">
                              <i class="glyphicon glyphicon-certificate">
                              </i>
                              </span>
                              <input id="signup_pwd" class="form-control" placeholder="Password" name="password" type="password">
                           </div>
                           <div class="form-group input-group">
                              <span class="input-group-addon">
                              <i class="glyphicon glyphicon-certificate">
                              </i>
                              </span>
                              <input id="signup_rpwd" class="form-control" placeholder="Re-enter Password" name="password" type="password">
                           </div>
                           <div class="form-group">
                              <button type="button" class="btn btn-primary btn-block" onclick="signup()">
                              Sign Up
                              </button>
                              <p class="help-block">
                                 <a class="text-muted" href="#" id="signup">Sign In</a>
                              </p>
                           </div>
                        </fieldset>
                     </form>
                  </div>
               </div>
            </div>
         </div>
         <!-- login panel -->
         <hr/>
         <h3 class="text-center">Or Login with </h3>
         <div class="row">
            <div class="col-md-8 col-md-offset-2">
               <div class="col-md-4">
                  <a href="#" class="btn btn-lg btn-primary btn-block" onclick="login('facebook');">Facebook</a>
               </div>
               <div class="col-md-4">
                  <a href="#" class="btn btn-lg btn-info btn-block" onclick="login('twitter');">Twitter</a>
               </div>
               <div class="col-md-4">
                  <a href="#" class="btn btn-lg btn-danger btn-block" onclick="login('google');">Google</a>
               </div>
            </div>
         </div>
      </div>
   </body>
</html>